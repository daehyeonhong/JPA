package com.springbook.biz.board.impl;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.springbook.biz.BoardVO_BACK;
import com.springbook.biz.board.BoardService;

/*@Component("boardService")*/
@Service("boardService")
public class BoardServiceImpl implements BoardService {
	/* @Autowired */
	/* @Inject */
	/* private BoardDAO boardDAO; */
	@Autowired
	/* private BoardDAO boardDAO; */
	/*private BoardDAOMybatis boardDAO;*/
	private BoardDAOJPA boardDAO;

	@Override
	public void insertBoard(boardDAO vo) {
		/*
		 * if (vo.getSeq() == 0) { throw new
		 * IllegalArgumentException("0번 글은 등록할 수 없습니다."); }
		 */
		boardDAO.insertBoard(vo);
	}

	@Override
	public void updateBoard(boardDAO vo) {
		boardDAO.updateBoard(vo);
	}

	@Override
	public void deleteBoard(boardDAO vo) {
		boardDAO.deleteBoard(vo);
	}

	@Override
	public BoardVO_BACK getBoard(boardDAO vo) {
		return boardDAO.getBoard(vo);
	}

	@Override
	public List<BoardVO_BACK> getBoardList(boardDAO vo) {
		return boardDAO.getBoardList(vo);
	}

	@Override
	public void updateBoardCount(boardDAO vo) {
		boardDAO.updateBoardCount(vo);
	}
}